@page
@model RazorMegaDesk.Pages.Desks.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Desk Manager</h1>

<form class="filter-sort">
    <p>
        <label>Search Name: <input type="text" asp-for="SearchString" /></label>
        <input type="submit" value="Search" />
    </p>
    <p>
        <label>
            Sort By:
            <select asp-for="SortBy" asp-items="Model.Sorts" onchange="this.form.submit();">
            </select>
        </label>
    </p>
</form>

<div class="table-responsive">
<table class="table deskmanager-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Desk[0].Width)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desk[0].Depth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desk[0].Drawers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desk[0].Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desk[0].RushDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desk[0].CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desk[0].QuoteDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desk[0].Price)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Desk) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Width)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Depth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Drawers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RushDays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuoteDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
        </tr>
        <tr>
            <td colspan="8">
                <div class="deskmanager-item-btns">
                    <button class="btn btn-primary" onclick="window.location.href='@Url.Page("./Edit", new { id = item.Id })'">
                        Edit
                    </button>
                    <button class="btn btn-primary" onclick="window.location.href='@Url.Page("./Details", new { id = item.Id })'">
                        Details
                    </button>
                    <button class="btn btn-primary" onclick="window.location.href='@Url.Page("./Delete", new { id = item.Id })'">
                        Delete
                    </button>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
<div class="deskmanager-options">
    <button onclick="location.href+='/Create'">Create New</button>
</div>