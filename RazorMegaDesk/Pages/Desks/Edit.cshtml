@page
@model RazorMegaDesk.Pages.Desks.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Desk</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Desk.Id" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Desk.CustomerName" class="control-label"></label>
                <input asp-for="Desk.CustomerName" class="form-control" />
                <span asp-validation-for="Desk.CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Desk.Width" class="control-label"></label>
                <input asp-for="Desk.Width" class="form-control" />
                <span asp-validation-for="Desk.Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Desk.Depth" class="control-label"></label>
                <input asp-for="Desk.Depth" class="form-control" />
                <span asp-validation-for="Desk.Depth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Desk.Drawers" class="control-label"></label>
                <input asp-for="Desk.Drawers" class="form-control" />
                <span asp-validation-for="Desk.Drawers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Desk.Material" class="control-label"></label>
                <select asp-for="Desk.Material" class="form-control">
                    <option value="Laminate">Laminate</option>
                    <option value="Oak">Oak</option>
                    <option value="Rosewood">Rosewood</option>
                    <option value="Veneer">Veneer</option>
                    <option value="Pine">Pine</option>
                </select>

                <span asp-validation-for="Desk.Material" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Desk.RushDays" class="control-label"></label>
                <select asp-for="Desk.RushDays" class="form-control">
                    <option value="Standard">Standard (14 Day)</option>
                    <option value="ThreeDay">3 Day</option>
                    <option value="FiveDay">5 Day</option>
                    <option value="SevenDay">7 Day</option>
                </select>

                <span asp-validation-for="Desk.RushDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
